<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:descendantFocusability="blocksDescendants"
    android:clickable="false"
    android:focusable="false"
    >

    <com.roalyr.customkeyboardengine.CustomKeyboardView xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/keyboard_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="visible"
        android:background="@color/keyboard_background"
        app:keyBackground="@drawable/key_background"
        app:keyBackgroundModifier="@drawable/key_background_modifier"
        app:keyTextColor="@color/key_text_color"
        app:keySmallTextColor="@color/key_small_text_color"
        />

    <com.roalyr.customkeyboardengine.CustomKeyboardView xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/service_keyboard_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="visible"
        android:background="@color/keyboard_background"
        app:keyBackground="@drawable/key_background"
        app:keyBackgroundModifier="@drawable/key_background_modifier"
        app:keyTextColor="@color/key_text_color"
        app:keySmallTextColor="@color/key_small_text_color"
        />

</LinearLayout>