<?xml version="1.0" encoding="utf-8"?>
<Keyboard xmlns:app="http://schemas.android.com/apk/res-auto"
    app:keyHeight="40dp"
    app:horizontalGap="2dp"
    app:verticalGap="2dp">

    <!-- TOP ROWS -->

    <Row >
        <Key
            app:keyLabel="1"
            app:keyLabelSmall="|"
            app:popupCharacters="|"
            app:keyWidth="12%p"
            app:popupKeyboard="@xml/keyboard_popup_template"
            app:keyEdgeFlags="left"
            />
        <Key
            app:keyLabel="2"
            app:keyLabelSmall="\@"
            app:popupCharacters="\@"
            app:keyWidth="10%p"
            app:popupKeyboard="@xml/keyboard_popup_template"
            />
        <Key
            app:keyLabel="3"
            app:keyLabelSmall="\#"
            app:popupCharacters="\#"
            app:keyWidth="10%p"
            app:popupKeyboard="@xml/keyboard_popup_template"
            />
        <Key
            app:keyLabel="4"
            app:keyLabelSmall="$"
            app:popupCharacters="$"
            app:keyWidth="9%p"
            app:popupKeyboard="@xml/keyboard_popup_template"
            />
        <Key
            app:keyLabel="5"
            app:keyLabelSmall="%"
            app:popupCharacters="%"
            app:keyWidth="9%p"
            app:popupKeyboard="@xml/keyboard_popup_template"
            />
        <Key
            app:keyLabel="6"
            app:keyLabelSmall="^"
            app:popupCharacters="^"
            app:keyWidth="9%p"
            app:popupKeyboard="@xml/keyboard_popup_template"
            />
        <Key
            app:keyLabel="7"
            app:keyLabelSmall="&amp;"
            app:popupCharacters="&amp;"
            app:keyWidth="9%p"
            app:popupKeyboard="@xml/keyboard_popup_template"
            />
        <Key
            app:keyLabel="8"
            app:keyLabelSmall="*"
            app:popupCharacters="*"
            app:keyWidth="10%p"
            app:popupKeyboard="@xml/keyboard_popup_template"
            />
        <Key
            app:keyLabel="9"
            app:keyLabelSmall="«"
            app:popupCharacters="«"
            app:keyWidth="10%p"
            app:popupKeyboard="@xml/keyboard_popup_template"
            />
        <Key
            app:keyLabel="0"
            app:keyLabelSmall="»"
            app:popupCharacters="»"
            app:keyWidth="12%p"
            app:popupKeyboard="@xml/keyboard_popup_template"
            app:keyEdgeFlags="right"
            />
    </Row>

    <Row >
        <Key
            app:keyLabel="Tab"
            app:codes="0"
            app:keyWidth="12%p"
            app:keyEdgeFlags="left"
            app:isModifier="true"
            />
        <Key
            app:keyLabel="`"
            app:keyLabelSmall="~"
            app:popupCharacters="~"
            app:keyWidth="10%p"
            app:popupKeyboard="@xml/keyboard_popup_template"
            />
        <Key
            app:keyLabel="&lt;"
            app:keyLabelSmall="&gt;"
            app:popupCharacters="&gt;"
            app:keyWidth="10%p"
            app:popupKeyboard="@xml/keyboard_popup_template"
            />
        <Key
            app:keyLabel="{"
            app:keyLabelSmall="}"
            app:popupCharacters="}"
            app:keyWidth="9%p"
            app:popupKeyboard="@xml/keyboard_popup_template"
            />
        <Key
            app:keyLabel="["
            app:keyLabelSmall="]"
            app:popupCharacters="]"
            app:keyWidth="9%p"
            app:popupKeyboard="@xml/keyboard_popup_template"
            />
        <Key
            app:keyLabel="("
            app:keyLabelSmall=")"
            app:popupCharacters=")"
            app:keyWidth="9%p"
            app:popupKeyboard="@xml/keyboard_popup_template"
            />
        <Key
            app:keyLabel="/"
            app:keyLabelSmall="\\"
            app:popupCharacters="\\"
            app:keyWidth="9%p"
            app:popupKeyboard="@xml/keyboard_popup_template"
            />
        <Key
            app:keyLabel="-"
            app:keyLabelSmall="_"
            app:popupCharacters="_"
            app:keyWidth="10%p"
            app:popupKeyboard="@xml/keyboard_popup_template"
            />
        <Key
            app:keyLabel="="
            app:keyLabelSmall="+"
            app:popupCharacters="+"
            app:keyWidth="10%p"
            app:popupKeyboard="@xml/keyboard_popup_template"
            />
        <Key
            app:keyIcon="@drawable/ic_clear_vector"
            app:codes="0"
            app:keyWidth="12%p"
            app:keyEdgeFlags="right"
            app:isModifier="true"
            app:isRepeatable="true"
            />
    </Row>

    <!-- LANG ROWS -->
    <Row >
        <Key
            app:keyLabel="q"
            app:keyWidth="12%p"
            app:keyEdgeFlags="left"
            />
        <Key
            app:keyLabel="w"
            app:keyWidth="10%p"
            />
        <Key
            app:keyLabel="e"
            app:keyWidth="10%p"
            />
        <Key
            app:keyLabel="r"
            app:keyWidth="9%p"
            />
        <Key
            app:keyLabel="t"
            app:keyWidth="9%p"
            />
        <Key
            app:keyLabel="y"
            app:keyWidth="9%p"
            />
        <Key
            app:keyLabel="u"
            app:keyWidth="9%p"
            />
        <Key
            app:keyLabel="i"
            app:keyWidth="10%p"
            />
        <Key
            app:keyLabel="o"
            app:keyWidth="10%p"
            />
        <Key
            app:keyLabel="p"
            app:keyWidth="12%p"
            app:keyEdgeFlags="right"
            />
    </Row>

    <Row >
        <Key
            app:keyLabel="a"
            app:keyWidth="12%p"
            app:keyEdgeFlags="left"
            />
        <Key
            app:keyLabel="s"
            app:keyWidth="10%p"
            />
        <Key
            app:keyLabel="d"
            app:keyWidth="10%p"
            />
        <Key
            app:keyLabel="f"
            app:keyWidth="9%p"
            />
        <Key
            app:keyLabel="g"
            app:keyWidth="9%p"
            />
        <Key
            app:keyLabel="h"
            app:keyWidth="9%p"
            />
        <Key
            app:keyLabel="j"
            app:keyWidth="9%p"
            />
        <Key
            app:keyLabel="k"
            app:keyWidth="10%p"
            />
        <Key
            app:keyLabel="l"
            app:keyWidth="10%p"
            />
        <Key
            app:keyLabel="'"
            app:keyWidth="12%p"
            app:keyLabelSmall="&quot;"
            app:popupCharacters="&quot;"
            app:popupKeyboard="@xml/keyboard_popup_template"
            app:keyEdgeFlags="right"
            />
    </Row>

    <Row>
        <Key
            app:keyLabel="z"
            app:keyWidth="12%p"
            app:keyEdgeFlags="left"
            />
        <Key
            app:keyLabel="x"
            app:keyWidth="10%p"
            />
        <Key
            app:keyLabel="c"
            app:keyWidth="10%p"
            />
        <Key
            app:keyLabel="v"
            app:keyWidth="9%p"
            />
        <Key
            app:keyLabel="b"
            app:keyWidth="9%p"
            />
        <Key
            app:keyLabel="n"
            app:keyWidth="9%p"
            />
        <Key
            app:keyLabel="m"
            app:keyWidth="9%p"
            />
        <Key
            app:keyLabel="\?"
            app:keyWidth="10%p"
            app:keyLabelSmall="!"
            app:popupCharacters="!"
            app:popupKeyboard="@xml/keyboard_popup_template"
            />
        <Key
            app:keyLabel="."
            app:keyWidth="10%p"
            app:keyLabelSmall=","
            app:popupCharacters=","
            app:popupKeyboard="@xml/keyboard_popup_template"
            />
        <Key
            app:keyLabel=":"
            app:keyWidth="12%p"
            app:keyLabelSmall=";"
            app:popupCharacters=";"
            app:popupKeyboard="@xml/keyboard_popup_template"
            app:keyEdgeFlags="right"
            />
    </Row>

    <!-- BOTTOM ROWS -->
    <Row >
        <Key
            app:codes="0"
            app:keyWidth="12%p"
            app:isModifier="true"
            app:keyIcon="@drawable/ic_caps_outline_vector"
            app:keyEdgeFlags="left"
            />
        <Key
            app:keyLabel="ctrl"
            app:keyWidth="12%p"
            app:isModifier="true"
            app:codes="0"
            />
        <Key
            app:keyIcon="@drawable/ic_clipboard_vector"
            app:keyWidth="12%p"
            app:codes="0"
            app:isModifier="true"
            />

        <Key
            app:codes="62"
            app:keyWidth="28%p"
            app:isRepeatable="true"
            app:keyRowEdgeFlags="bottom"
            app:isCompound="true"
            />

        <Key
            app:keyLabel="edit"
            app:keyLabelSmall="☻"
            app:popupCharacters="spec[☻; -6]"
            app:keyWidth="12%p"
            app:popupKeyboard="@xml/keyboard_popup_template"
            app:codes="0"
            app:isModifier="true"
            />
        <Key
            app:keyLabel="▲"
            app:keyWidth="12%p"
            app:codes="0"
            app:isModifier="true"
            app:isRepeatable="true"
            />
        <Key
            app:keyLabel="Ent"
            app:keyLabelSmall="⚙"
            app:popupCharacters="spec[⚙; -15] "
            app:popupKeyboard="@xml/keyboard_popup_template"
            app:codes="66"
            app:keyWidth="12%p"
            app:isModifier="true"
            app:keyEdgeFlags="right"
            />


    </Row>
    <Row >
        <Key
            app:keyLabel="Flt"
            app:codes="-12"
            app:keyWidth="12%p"
            app:isModifier="true"
            app:isRepeatable="true"
            app:keyEdgeFlags="left"
            />
        <Key
            app:keyLabel="Re"
            app:codes="0"
            app:keyWidth="12%p"
            app:isRepeatable="true"
            app:isModifier="true"
            />
        <Key
            app:keyLabel="En"
            app:keyLabelSmall="x"
            app:popupCharacters="spec[x; -27] "
            app:popupKeyboard="@xml/keyboard_popup_template"
            app:keyWidth="12%p"
            app:codes="0"
            app:isModifier="true"
            />

        <Key
            app:codes="62"
            app:keyWidth="28%p"
            app:isRepeatable="true"
            app:keyRowEdgeFlags="top"
            app:isCompound="true"
            />

        <Key
            app:keyLabel="◀"
            app:keyWidth="12%p"
            app:codes="0"
            app:isModifier="true"
            app:isRepeatable="true"
            />
        <Key
            app:keyLabel="▼"
            app:keyWidth="12%p"
            app:codes="0"
            app:isModifier="true"
            app:isRepeatable="true"
            />
        <Key
            app:keyLabel="▶"
            app:keyWidth="12%p"
            app:codes="0"
            app:isModifier="true"
            app:keyEdgeFlags="right"
            app:isRepeatable="true"
            />

    </Row>
</Keyboard>
